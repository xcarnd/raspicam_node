<launch>
  <arg name="width" default="320"/>
  <arg name="height" default="240"/>
  <arg name="framerate" default="60"/>
  <arg name="quality" default="80"/>

  <node type="raspicam_node" pkg="raspicam_node" name="raspicam_node" output="screen">
    <param name="camera_name" value="raspicam"/>
    <param name="camera_info_url" value="package://raspicam_node/camera_info/raspicam.yaml"/>
    <param name="width" value="$(arg width)"/>
    <param name="height" value="$(arg height)"/>
    <param name="framerate" value="$(arg framerate)"/>
    <param name="quality" value="$(arg quality)"/>
    <param name="hFlip" value="false"/>
    <param name="vFlip" value="false"/>
    <param name="shutterSpeed" value="10000"/>
    <param name="ISO" value="800"/>
    <param name="exposure_mode" value="sports"/>
    <param name="awb_mode" value="auto"/>

    <param name="camera_frame_id" value="camera"/> 

  </node>

</launch>
